<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.isvogue.myapplication.MainActivity">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Joy Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/joy"
        android:layout_below="@+id/graph"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Anger Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/joy"
        android:layout_marginTop="10dp"
        android:id="@+id/anger" />

    <TextView
        android:text="Surprise Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/surprise"
        android:layout_below="@+id/anger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Mean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mean"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/surprise"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Threshold"
        android:layout_alignParentBottom="true"
        android:textColor="#00aa00"
        android:layout_below="@+id/mean"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp" />

    <SurfaceView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/cameraDetectorSurfaceView"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/graph"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
